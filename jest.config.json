{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "mts", "js", "json"],
  "testMatch": ["**/tests/**/*.(spec|test).[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)", "**/src/**/*.test.[jt]s?(x)", "**/src/**/*.spec.[jt]s?(x)"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "transform": {
    "^.+\\.(ts|mts|js)$": ["ts-jest", { "useESM": true }]
  },
  "extensionsToTreatAsEsm": [".ts", ".mts"]
}
